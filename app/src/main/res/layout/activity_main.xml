<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rishabh.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My NanoDegree App"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/abc"
        android:textColor="#ff0000"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@+id/abc"
        android:id="@+id/abc1"
        android:text="Spotify Streamer"
        android:autoText="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0f0f0f"
        android:background="#ffa500"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@+id/abc1"
        android:id="@+id/abc2"
        android:text="Scores App"
        android:autoText="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0f0f0f"
        android:background="#ffa500"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@+id/abc2"
        android:id="@+id/abc3"
        android:text="Library App"
        android:autoText="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0f0f0f"
        android:background="#ffa500"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"

        />
    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@+id/abc3"
        android:id="@+id/abc4"
        android:text="Build It Bigger"
        android:autoText="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0f0f0f"
        android:background="#ffa500"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@+id/abc4"
        android:id="@+id/abc5"
        android:text="XYZ Reader"
        android:autoText="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0f0f0f"
        android:background="#ffa500"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@+id/abc5"
        android:id="@+id/abc6"
        android:text="Capstone:My own app"
        android:autoText="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0f0f0f"
        android:background="#cd0000"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />


</RelativeLayout>
